---
import { Icon } from "astro-icon/components";

import { UI } from "astrowind:config";

export interface Props {
    label?: string;
    class?: string;
    iconClass?: string;
    iconName?: string;
}

const {
    label = "Toggle between Dark and Light mode",
    class: className = " focus:outline-none p-2   text-sm  inline-flex items-center rounded-full  bg-transparent font-medium text-center  text-page leading-snug transition  ease-in duration-200 -blue-200   dark:text-slate-300  hover:bg-muted cursor-pointer",
    iconClass = "w-6 h-6",
    iconName = "tabler:sun",
} = Astro.props;
---

{
    !(UI.theme && UI.theme.endsWith(":only")) && (
        <button type="button" class={className} aria-label={label} data-aw-toggle-color-scheme>
            <Icon name={iconName} class={`${iconClass} hover:animate-slowspin`} />
        </button>
    )
}
